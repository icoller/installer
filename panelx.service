[Unit]
Description=PanelX, a modern open source linux panel
After=syslog.target network.target

[Service]
ExecStart=/usr/bin/panelx
ExecReload=/bin/kill -s HUP $MAINPID
Restart=always
RestartSec=5
LimitNOFILE=1048576
LimitNPROC=1048576
LimitCORE=1048576
Delegate=yes
KillMode=process

[Install]
WantedBy=multi-user.target